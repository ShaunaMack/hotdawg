<div class="col text-right bg-danger">
        
    <% if user_signed_in? %>
        <p class="nav-item">
          <%= link_to 'Logout', destroy_user_session_path, method: 'delete',  class:"btn btn-danger"%>
          |
          <%= current_user.email %>
        </p>
    <% else %>
        <p class="nav-item">
          <%= link_to 'Login', new_user_session_path, class:"btn btn-danger" %>
        |
          <%= link_to 'Sign Up', new_user_registration_path, class:"btn btn-danger"  %>
        </p>
    <% end %>
</div>