
<h1>Dogs</h1>
  <div class="box">
  <div class="card-deck">
    <% @dogs.each do |dog| %>
      <div class="card" style="min-width:250px;">
      <%= image_tag dog.picture, class:"card-img-top", width: 120  if dog.picture.attached? %>
      <div class="card-body">
      <h5 class="card-title"><%= link_to "#{dog.name.capitalize}", dog_path(dog) %></h5>
      <p class="card-text">
        <p>Gender:<%= dog.gender %></p>
        <p>Breed:<%= dog.breed %></p>
        <p>Size:<%= dog.size %></p>
    </p>
    </div>
    <div class="card-footer">
      <small class="text-muted">Click my name for more details</small>
    </div>
  </div>   
    <% end %>
  </div>


<br>


  
  
